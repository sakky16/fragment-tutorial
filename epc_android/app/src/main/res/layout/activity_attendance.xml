<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.trisysit.epc_android.activity.AttendenceActivity">



    <include
        android:id="@+id/toolbar_setting"
        layout="@layout/app_bar_layout" />
    <include
        android:visibility="gone"
        android:id="@+id/snack_bar"
        layout="@layout/snack_bar_layout"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/myTask_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@color/Gray"
            android:dividerHeight="1dp">
        </ListView>
        <TextView
            android:layout_width="wrap_content"
            android:text="No attendance record available"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:visibility="gone"
            android:id="@+id/no_attendance_msg"
            android:textColor="@color/Black"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

    </RelativeLayout>


</LinearLayout>