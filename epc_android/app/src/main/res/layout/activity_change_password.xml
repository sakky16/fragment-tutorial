<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rootlayout"
    android:background="@color/White"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.trisysit.epc_android.activity.ChangePasswordActivity">
    <include
        android:id="@+id/toolbar_report"
        layout="@layout/app_bar_layout"/>
    <include
        android:id="@+id/snack_bar"
        android:visibility="gone"
        layout="@layout/snack_bar_layout"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:id="@+id/scrollView"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:text="@string/old_password_hint"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:paddingLeft="10sp"
                android:id="@+id/old_password_et"
                android:inputType="textPassword"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:background="@drawable/transparent_blue_border"
                android:layout_height="45sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:textColor="@color/Black"
                android:textStyle="bold"
                android:text="@string/new_password_hint"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:paddingLeft="10sp"
                android:id="@+id/new_password_et"
                android:inputType="textPassword"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:background="@drawable/transparent_blue_border"
                android:layout_height="45sp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:text="@string/confirm_password_hint"
                android:layout_height="wrap_content" />
            <EditText
                android:layout_width="match_parent"
                android:layout_marginTop="10sp"
                android:paddingLeft="10sp"
                android:id="@+id/confirm_password_et"
                android:inputType="textPassword"
                android:layout_marginLeft="50sp"
                android:layout_marginRight="50sp"
                android:background="@drawable/transparent_blue_border"
                android:layout_height="45sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="20sp"
                android:layout_marginBottom="10sp"
                android:layout_height="45sp">
                <Button
                    android:layout_width="match_parent"
                    android:text="Change Password"
                    android:id="@+id/change_password_btn"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/White"
                    android:background="@drawable/green_backgroung"
                    android:layout_height="match_parent" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
