<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rootlayout"
    android:orientation="vertical"
    android:background="@color/White"
    android:layout_height="match_parent">
    <include
        android:id="@+id/toolbar_report"
        layout="@layout/app_bar_layout" />
    <include
        android:id="@+id/snack_bar"
        android:visibility="gone"
        layout="@layout/snack_bar_layout"/>
    <ScrollView
        android:layout_width="fill_parent"
        android:id="@+id/scorll_view"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="15sp"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="EPC"
                    android:textSize="20dp"
                    android:textColor="@color/Black"
                    android:gravity="center"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:textSize="18sp"
                    android:id="@+id/date_tv"
                    android:layout_marginTop="10sp"
                    android:text="wed,1 jan 2014"
                    android:gravity="center"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10sp"
                    android:layout_height="50sp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="05:00"
                        android:id="@+id/time_tv"
                        android:layout_centerHorizontal="true"
                        android:textSize="45sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/amOrPm_tv"
                        android:text="am"
                        android:layout_marginLeft="8sp"
                        android:layout_alignParentBottom="true"
                        android:layout_toRightOf="@+id/time_tv"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:background="@drawable/transparent_blue_border"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="Punch in"
                        android:id="@+id/punch_tv"
                        android:textColor="@color/Black"
                        android:gravity="center"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:id="@+id/punch_ll"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:gravity="center"
                        android:background="@drawable/input_border_type">

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginRight="10sp"
                            android:background="@drawable/right_arrow"
                            />
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@drawable/sun"/>


                    </LinearLayout>




                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/commentImage_ll"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:textColor="@color/Black"
                    android:text="* Please Write your work here"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/transparent_blue_border">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/comment_et"
                        android:gravity="start"
                        android:hint="Comment"
                        android:inputType="text"
                        android:paddingTop="10sp"
                        android:paddingLeft="10dp"
                        android:textColor="@color/Black"
                        android:background="@android:color/transparent"
                        android:textSize="15dp"/>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="* Upload your Images"
                    android:layout_marginLeft="10sp"
                    android:layout_marginBottom="10sp"
                    android:textColor="@color/Black"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/image_count_ll"

                    android:layout_marginRight="10sp"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="0dp"
                        android:text="+3 more"
                        android:id="@+id/imageCount1"
                        android:textColor="@color/Red"
                        android:layout_weight="1"
                        android:gravity="start"
                        android:visibility="invisible"
                        android:textStyle="bold"
                        android:textSize="10sp"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:text="+3 more"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:gravity="start"
                        android:visibility="invisible"
                        android:id="@+id/imageCount2"
                        android:textStyle="bold"
                        android:textColor="@color/Red"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:text="+3"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:id="@+id/imageCount3"
                        android:visibility="invisible"
                        android:textColor="@color/Red"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:text="+3"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:gravity="start"
                        android:textStyle="bold"
                        android:id="@+id/imageCount4"
                        android:visibility="invisible"
                        android:textColor="@color/Red"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:text="+3"
                        android:layout_weight="1"
                        android:textSize="10sp"
                        android:gravity="start"
                        android:visibility="invisible"
                        android:textStyle="bold"
                        android:id="@+id/imageCount5"
                        android:textColor="@color/Red"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_width="0dp"
                        android:text="+3"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:gravity="start"
                        android:id="@+id/imageCount6"
                        android:visibility="invisible"
                        android:textColor="@color/Red"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/images_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/camera_icon" />

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/camera_icon" />

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:visibility="invisible"
                        android:scaleType="fitCenter"
                        android:src="@drawable/camera_icon" />

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:visibility="invisible"
                        android:scaleType="fitCenter"
                        android:src="@drawable/camera_icon" />

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:visibility="invisible"
                        android:scaleType="fitCenter"
                        android:src="@drawable/camera_icon" />
                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:visibility="invisible"
                        android:scaleType="fitCenter"
                        android:src="@drawable/camera_icon" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/images_ll1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10sp"
                    android:visibility="gone"
                    android:layout_marginRight="10sp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image7"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/camera_icon" />

                    <ImageView
                        android:id="@+id/image8"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:visibility="invisible"
                        android:scaleType="fitCenter"
                        android:src="@drawable/camera_icon" />

                    <ImageView
                        android:id="@+id/image9"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:visibility="invisible"
                        android:scaleType="fitCenter"
                        android:src="@drawable/camera_icon" />

                    <ImageView
                        android:id="@+id/image10"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:visibility="invisible"
                        android:scaleType="fitCenter"
                        android:src="@drawable/camera_icon" />

                    <ImageView
                        android:id="@+id/image11"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:padding="4dp"
                        android:visibility="invisible"
                        android:scaleType="fitCenter"
                        android:src="@drawable/camera_icon" />
                    <ImageView
                        android:id="@+id/image12"
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="4dp"
                        android:layout_weight="1"
                        android:visibility="invisible"
                        android:padding="4dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/camera_icon" />

                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:text="SAVE"
                    android:id="@+id/save_btn"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:textColor="@color/White"
                    android:textSize="18sp"
                    android:layout_marginBottom="10sp"
                    android:background="@drawable/green_backgroung"
                    android:layout_height="wrap_content" />
            </LinearLayout>


`
        </LinearLayout>
    </ScrollView>

</LinearLayout>