<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.trisysit.epc_android.activity.ProjectListingActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/app_bar_layout" />
    <include
        android:id="@+id/snack_bar"
        android:visibility="gone"
        layout="@layout/snack_bar_layout"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/show_history_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@color/Gray"
            android:dividerHeight="1dp">
        </ListView>
        <TextView
            android:layout_width="wrap_content"
            android:text="No history available"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:visibility="gone"
            android:id="@+id/no_history_msg"
            android:textColor="@color/Black"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_task"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/white_plus"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            app:backgroundTint="@color/darkBlue"
            />


    </RelativeLayout>

</LinearLayout>