<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/secondaryProgress">
        <shape
            android:innerRadiusRatio="10"
            android:shape="ring"
            android:thicknessRatio="11.0"
            android:useLevel="true">


            <gradient
                android:centerColor="@color/Lightgray"
                android:endColor="@color/Lightgray"
                android:startColor="@color/Lightgray"
                android:type="sweep" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <rotate
            android:fromDegrees="160"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="90">

            <shape
                android:innerRadiusRatio="10"
                android:shape="ring"
                android:thicknessRatio="11.0"
                android:useLevel="true">


                <rotate
                    android:fromDegrees="360"
                    android:pivotX="50%"
                    android:pivotY="50%"
                    android:toDegrees="180" />

                <gradient
                    android:centerColor="@color/darkBlue"
                    android:endColor="@color/darkBlue"
                    android:startColor="@color/darkBlue"
                    android:type="sweep" />

            </shape>
        </rotate>
    </item>
</layer-list>
